<p id="notice"><%= notice %></p>
<%= render "layouts/headerAdmin" %>

<h1>Listing of Line Items</h1>
<%= render "layouts/sidebarAdminMenu" %>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>Sausage</th>
      <th>Cart</th>
      <th>Qty</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @line_items.each do |line_item| %>
      <tr>
        <td><%= line_item.id %></td>
        <td><%= line_item.sausage.name %></td>
        <td><%= line_item.cart_id %></td>
        <td><%= line_item.quantity %></td>
        <td><%= link_to 'Show', line_item %></td>
        <td><%= link_to 'Edit', edit_line_item_path(line_item) %></td>
        <td><%= link_to 'Destroy', line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<br>

<%= render "layouts/footer" %>
