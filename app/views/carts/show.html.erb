<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<%= render "layouts/header1" %>
<%= render "layouts/sidebarCart" %>
<h2> Your Sausage Cart Contains </h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cost</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @cart.line_items.each do |item| %>
      <tr>
        <td><%= item.quantity %> &times; <%= item.sausage.name %></td>
        <td><%= number_to_currency(item.total_price) %></td>
      </tr>
    <% end %>
  </tbody>

  <br>

  <tbody>
    <tr class="total_line">
      <td colspan="2">Total Cost </td>
      <td class="total_cell"><%= number_to_currency(@cart.total_price) %></td>
    </tr>
  </tbody>
</table>

